    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
</head>
<body>
    
   <%- body %>
   
<script>
        <% if (alerts.error) { %>
 
        <% for(let i=0;i<alerts.error.length;i++){ %>
            new Noty({
            theme: 'mint',
            type: 'error',
            text: '<%= alerts.error[i] %>',
            layout: 'topRight',
            timeout: 1500,
        }).show();
       <% } %>     
           
        <% } %>   
       <% if(alerts.success){ %>
        new Noty({
            theme: 'mint',
            type: 'success',
            text: '<%= alerts.success %>',
            layout: 'topRight',
            timeout: 1500,
        }).show();
        
       <% } %>
</script>

</body>
</html>